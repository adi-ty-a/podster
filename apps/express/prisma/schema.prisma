generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum RecordingStatus {
  PENDING
  UPLOADING
  READY
  FAILED
}

model User {
  id Int @id @default(autoincrement())
  username String? @unique
  email String? @unique
  name String?
  
  password String?
  googleId String? @unique

  joinedroom Rooms[] @relation("GuestRooms")
  hostedRooms Rooms[] @relation("HostRooms")
  recordings Recordings[]
}

model Recordings{
  id String @id @default(uuid()) @unique
  name String
  date DateTime @default(now())
  key String @unique
  status RecordingStatus
  roomId String
  room Rooms @relation(fields: [roomId], references: [id])
  
  createdById Int
  host User @relation(fields: [createdById],references: [id])
}

model Rooms {
  id String @id @default(uuid())
  date DateTime @default(now())
  recordings Recordings[] 
  name String

  hostId Int 
  host User @relation("HostRooms",fields: [hostId], references: [id])

  guestid Int?
  guest User? @relation("GuestRooms",fields: [guestid],references: [id])

  @@unique([date, id])
}